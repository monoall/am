<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="ua.org.javatraining.automessenger.app.activities.PostDetails"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:focusableInTouchMode="true"
            android:layout_weight="1">
        <include
                layout="@layout/toolbar"
                android:id="@+id/toolbar"/>
        <FrameLayout
                android:id="@+id/frame"
                android:layout_below="@+id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/comment_rv"
                    android:scrollbars="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
            </android.support.v7.widget.RecyclerView>
        </FrameLayout>
        <View
                android:layout_below="@+id/toolbar"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow"/>
    </RelativeLayout>
    <LinearLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/add_comment_field"
                android:hint="@string/add_comment_hint"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="16dp"
                android:textColor="@color/black87"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        <ImageButton
                android:id="@+id/submit"
                android:background="@drawable/item_selected_back"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_send_grey600_24dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/post_comment"
                android:onClick="actionCommentSend"/>
    </LinearLayout>

</LinearLayout>