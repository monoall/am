<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:id="@+id/comment_ll"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/description_field"
                android:textColor="@color/black87"
                android:layout_width="0dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="RtlHardcoded"/>
        <TextView
                android:id="@+id/date_field"
                android:textColor="@color/black54"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rate_panel"
            android:visibility="gone"
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_gravity="center"
                android:id="@+id/rating_field"
                android:padding="8dp"
                android:textColor="@color/black54"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:id="@+id/comment_thumb_up"
                android:background="@drawable/nav_item_selected_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_thumb_up_grey600_24dp"
                android:contentDescription="@string/thumb_up"/>

        <ImageButton
                android:id="@+id/comment_thumb_down"
                android:background="@drawable/nav_item_selected_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:src="@drawable/ic_thumb_down_grey600_24dp"
                android:contentDescription="@string/thumb_down"/>
    </LinearLayout>
    <View
            android:background="@color/grey26"
            android:layout_width="fill_parent"
            android:layout_height="1dp"/>
</LinearLayout>