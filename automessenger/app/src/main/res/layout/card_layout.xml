<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardPreventCornerOverlap="false"

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:onClick="spda"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_gravity="bottom|center|left"
                android:id="@+id/relative_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded">
            <ImageView
                    android:id="@+id/card_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/photo"/>
            <TextView
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white87"
                    android:id="@+id/on_picture_text"
                    android:padding="16dp"
                    android:background="@drawable/title_gradient"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/card_image_view"/>
        </RelativeLayout>
        <TextView
                android:textSize="14sp"
                android:textColor="@color/black54"
                android:id="@+id/text_date"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="14sp"
                android:textColor="@color/black87"
                android:id="@+id/description_lable"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"/>
        <LinearLayout
                android:padding="8dp"
                android:layout_width="fill_parent"
                android:theme="?android:attr/buttonBarStyle"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_height="wrap_content"
                    android:text="@string/button_share"/>
            <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/subscribe_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_subscribe"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>